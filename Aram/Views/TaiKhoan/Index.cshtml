
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="ftco-section" style="background: white; margin: 50px auto ; width:90%; border-radius:5px;">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-xl-7 ftco-animate fadeInUp ftco-animated">
				<form action="#" class="billing-form">
					<h3 class="mb-4 billing-heading">Thông tin tài khoản</h3>
					<div class="row align-items-end">
						<div class="col-md-6">
							<div class="form-group">
								<label for="firstname">Họ Tên</label>
								<input type="text" class="form-control" placeholder="">
							</div>
						</div>
						<div class="w-100"></div>
						<div class="col-md-12">
							<div class="form-group">
								<label for="country">Giới tính</label>
								<div class="select-wrap">
									<div class="icon"><span class="ion-ios-arrow-down"></span></div>
									<select name="" id="" class="form-control">
										<option value="">Nam</option>
										<option value="">Nữ</option>
									</select>
								</div>
							</div>
						</div>
						<div class="col-md-12">
							<div class="form-group">
								<label for="country">Địa chỉ</label>
								<div class="select-wrap">
									<div class="icon"><span class="ion-ios-arrow-down"></span></div>
									<input name="" id="" class="form-control"/>
								</div>
							</div>
						</div>
						<div class="w-100"></div>
						<div class="col-md-6">
							<div class="form-group">
								<label for="towncity">Số điện thoại</label>
								<input type="text" class="form-control" placeholder="">
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<label for="postcodezip">Email</label>
								<input type="text" class="form-control" placeholder="">
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<input type="submit" value="Lưu" style="padding: 5px 30px;
																		background: white; 
																		border-radius: 3px; 
																		cursor: pointer; 
																		color:#2d91c7; 
																		border: 1px solid; ">
							</div>
						</div>
					</div>
				</form><!-- END -->

			</div>
			<div class="col-xl-5">
				<div class="row mt-5 pt-3">
					<div class="col-md-12">
						<div class="cart-detail p-3 p-md-4">
							<div class="form-group">

							</div>
							<div class="form-group">
								<div class="col-md-12">
									<div class="checkbox">
										<a href="" style="color: #1e86d2">Cập nhật mật khẩu</a>
									</div>
								</div>
							</div>
							<p>
								<button href="#" style="border: 1px solid #c73737;
													color: #c73737;
													font-size: 18px; 
													padding: 5px 10px; 
													border-radius: 3px; 
													background: white;
													cursor:pointer;
													margin-left:20px">Đăng xuất</button></p>
						</div>
					</div>
				</div>
			</div> <!-- .col-md-8 -->
		</div>
	</div>
</section>


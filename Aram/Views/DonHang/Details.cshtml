
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="ftco-section ftco-cart" style="
    padding: 0px;
    margin: 100px 0px;">
	<div class="container">
		<div class="row">
			<div class="col-md-12 ftco-animate">
				<div class="cart-list">
					<table class="table" style="
							background: #fff;
							box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;">
						<thead class="thead-primary">
							<tr class="text-center" style="background-color: #c25f11 !important; ">
								<th>&nbsp;</th>
								<th>Hình ảnh</th>
								<th>Tên</th>
								<th>Đơn giá</th>
								<th>Số lượng</th>
								<th>Tổng tiền</th>
							</tr>
						</thead>
						<tbody>
							<tr class="text-center">
								<td class="product-remove">
								</td>

								<td class="image-prod">
									<div class="img" style="background-image: url('/img/zyro-image (10).png');">
									</div>
								</td>

								<td class="product-name">
									<h3>Cà phê trung nguyên</h3>
								</td>

								<td class="price">120.000 đ</td>

								<td class="quantity">
									1
								</td>
								<td class="total">120.000 đ</td><!-- END TR-->
						</tbody>
					</table>
				</div>
			</div>
		</div>

		<form action="">
			<div class="row justify-content-end" style="background: #fff;
														border-radius: 5px;
														box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;">
				<div class="col-lg-4 mt-5 cart-wrap ftco-animate">
					<div class="cart-total mb-3">
						<h3>Ghi chú</h3>
						<div class="form-group">
							<input type="text" class="form-control text-left px-3" placeholder="" value="Giao trước 10h trưa cho em nha!" disabled>
						</div>
					</div>
				</div>
				<div class="col-lg-4 mt-5 cart-wrap ftco-animate">
					<div class="cart-total mb-3">
						<h3>Thông tin giao hàng</h3>
						<div class="form-group">
							<label for="">Họ tên</label>
							<input type="text" class="form-control text-left px-3" placeholder="" value="Lê Văn A" disabled>
						</div>
						<div class="form-group">
							<label for="country">Số điện thoại</label>
							<input type="text" class="form-control text-left px-3" placeholder="" value="1234567890" disabled>
						</div>
						<div class="form-group">
							<label for="country">Đia chỉ</label>
							<input type="text" class="form-control text-left px-3" placeholder="" value="12 Phan Chu Trinh, Tp Buôn Ma Thuột" disabled>
						</div>
					</div>
				</div>
				<div class="col-lg-4 mt-5 cart-wrap ftco-animate">
					<div class="cart-total mb-3">
						<h3>Tổng tiền</h3>
						<p class="d-flex">
							<span>Tạm tính</span>
							<span>120.000 đ</span>
						</p>
						<p class="d-flex">
							<span>Phí Ship</span>
							<span>20.000 đ</span>
						</p>
						<hr>
						<p class="d-flex total-price">
							<span>Tổng</span>
							<span>140.000 đ</span>
						</p>
					</div>
					<p>

						<button style="color: white !important;
										background-color: #c25f11 !important;
										border-radius: 2px !important;
										font-size:18px;
										width: 100%;
										padding: 5px 0;
										cursor: pointer;">
							Đã giao
						</button>

						<button style="color: #da1b1b !important;
										background-color: white !important;
										border-radius: 2px !important;
										font-size:18px;
										width: 100%;
										border: 1px solid #da1b1b  !important;
										padding: 5px 0;
										cursor: pointer;
										margin-top:20px;">
							Huỷ đơn hàng
						</button>

					</p>
				</div>
			</div>
		</form>
</section>


<section class="ftco-section" style="background: url(/img/z4948448986151_c1d081626f73786c95fd363e3d17c8fa.jpg) no-repeat fixed !important; margin-top: 20px;">
	<div class="container">
		<div class="row justify-content-center mb-3 pb-3">
			<div class="col-md-12 heading-section text-center ftco-animate">
				<h2 class="mb-4">Sản phẩm tương ứng</h2>
				<p>Các phẩm tương ứng co trong cửa hàng</p>
			</div>
		</div>
	</div>
	<div class="container">
		<div class="row">
			@{
				@foreach (var item in ViewBag.ThongTinSanPham)
				{
					<div class="col-md-6 col-lg-3 ftco-animate contaner__content--trangchu">
						<div class="product">
							<a class="img-prod" style="height: 240px; object-fit: cover;">
								<img class="img-fluid" src="@Url.Action("GetImage", "SanPham", new { id = item.Id})"
									 alt="Colorlib Template">
							</a>
							<div class="text py-3 pb-4 px-3 text-center">
								<h3><a href="#">@item.Ten</a></h3>
								<div class="d-flex">
									<div class="pricing">
										@{
											if (item.TrangThai == true)
											{
												<p class="price"><span style=" font-weight:400; font-size:15px; color: #a11212" class="price-sale">Còn hàng</span></p>
											}
											else
											{
												<p class="price"><span style=" font-weight:400; font-size:15px; color: #a11212" class="price-sale">Hết hàng</span></p>
											}
										}
										<p class="price"><span class="price-sale">@item.Gia.ToString("C3")</span></p>
									</div>
								</div>
								<div class="bottom-area d-flex px-3">
									<div class="m-auto d-flex">
										<a asp-action="Product" asp-controller="Home" asp-route-id="@item.Id" class="add-to-cart d-flex justify-content-center align-items-center text-center">
											<span><i class="fa-solid fa-list"></i></span>
										</a>
										<a href="#" class="buy-now d-flex justify-content-center align-items-center mx-1">
											<span><i class="fa-solid fa-cart-shopping"></i></span>
										</a>
									</div>
								</div>
							</div>
						</div>
					</div>
				}
			}
		</div>
	</div>
	<div class="row mt-5">
		<div class="col text-center">
			<div class="block-27">
				<ul class="PhanTrang">
					<li class="active__phan--trang"><span>1</span></li>
				</ul>
			</div>
		</div>
	</div>
</section>

<section class="ftco-section ftco-no-pt ftco-no-pb py-5 bg-light">
	<div class="container py-4">
		<div class="row d-flex justify-content-center py-5">
			<div class="col-md-6">
				<h2 style="font-size: 22px; color:black !important;" class="mb-0">Thông tin cửa hàng</h2>
				<span>@ViewBag.Shop.Ten</span> <br />
				<span>@ViewBag.Shop.SoDT</span> <br />
				<span>@ViewBag.Shop.DiaChi</span>
			</div>
			<div class="col-md-6 d-flex align-items-center">
				<iframe src="@ViewBag.Shop.LinkMap"
						width="600" height="150" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
			</div>
		</div>
	</div>
</section>

<script>
	let thispage = 1;
	let limit = 8;
	let list = document.querySelectorAll('.contaner__content--trangchu')

	function loadItem() {
		let beginGet = limit * (thispage - 1);
		let endGet = limit * thispage - 1;
		list.forEach((item, key) => {
			if (key >= beginGet && key <= endGet) {
				item.style.display = 'block';
			}
			else {
				item.style.display = 'none'
			}
		})
		listpage();
	}
	loadItem()

	function listpage() {
		let count = Math.ceil(list.length / limit)
		document.querySelector('.PhanTrang').innerHTML = '';
		for (let i = 1; i <= count; i++) {
			let newpage = document.createElement('li');
			newpage.innerText = i;
			if (i == thispage) {
				newpage.classList.add('active__phan--trang');
			}
			newpage.setAttribute('onclick', `changePage(${i})`)
			document.querySelector('.PhanTrang').appendChild(newpage);
		}
	}
	function changePage(i) {
		thispage = i;
		loadItem();
	}

	//thêm số lượng
	var them = document.getElementById('plus');
	var giam = document.getElementById('minus');
	var input = document.getElementById('quantity');
	var dem = input.value;
	them.addEventListener('click', function(){
		input.value = ++dem; 
	});
	giam.addEventListener('click', function () {
		if ( dem == 0 ){
			dem = 1
		}
		input.value = --dem;
	});
</script>


@{
    ViewData["Title"] = "Invoice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero-wrap hero-bread" style="background-image: url('/img/zyro-image\ \(11\).png');">
	<div class="container">
		<div class="row no-gutters slider-text align-items-center justify-content-center">
			<div class="col-md-9 ftco-animate text-center">
				<p class="breadcrumbs"><span>Dự án</span></p>
				<h1 class="mb-0 bread">Thành phố xanh</h1>
			</div>
		</div>
	</div>
</div>


<section class="ftco-section ftco-cart" style="
    padding: 0px;
    margin: 20px 0px;">
	<div class="container">
		<div class="row">
			<div class="col-md-12 ftco-animate">
				<div class="cart-list">
					<table class="table" style="
							background: #fff;
							box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;">
						<thead class="thead-primary">
							<tr class="text-center" style="background-color: #dd781a !important; ">
								<th>&nbsp;</th>
								<th>Hình ảnh</th>
								<th>Tên</th>
								<th>Đơn giá</th>
								<th>Số lượng</th>
								<th>Tổng tiền</th>
							</tr>
						</thead>
						<tbody>
							<tr class="text-center">
								<td class="product-remove">
									<button type="button" class="btn" style="padding: 16px 10px;">
										<i class="fa-solid fa-xmark" style="color : black; font-size:20px;"></i>
									</button>
									
								</td>

								<td class="image-prod">
                                    <div class="img" style="background-image: url('/img/zyro-image (10).png');">
									</div>
								</td>

								<td class="product-name">
									<h3>Cà phê trung nguyên</h3>
								</td>

								<td class="price">120.000 đ</td>

								<td class="quantity">
									<form action="">
										<div class="input-group mb-3">
											<input type="text" name="quantity"
												   class="quantity form-control input-number" value="1" min="1"
												   max="100">
										</div>
									</form>
								</td>
								<td class="total">120.000 đ</td><!-- END TR-->
						</tbody>
					</table>
			</div>
		</div>
	</div>

	<form action="">
			<div class="row justify-content-end" style="background: #fff;
														border-radius: 5px;
														box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;">
			<div class="col-lg-4 mt-5 cart-wrap ftco-animate">
				<div class="cart-total mb-3">
					<h3>Ghi chú</h3>
					<p>Nhập ghi chú vào trường thông tin</p>
					<div class="form-group">
						<label for="">Ghi chú</label>
						<input type="text" class="form-control text-left px-3" placeholder="">
					</div>
				</div>
			</div>
			<div class="col-lg-4 mt-5 cart-wrap ftco-animate">
				<div class="cart-total mb-3">
					<h3>Thông tin giao hàng</h3>
					<p>Nhập thông tin nhập hàng của bạn</p>
					<div class="form-group">
						<label for="">Họ tên</label>
						<input type="text" class="form-control text-left px-3" placeholder="">
					</div>
					<div class="form-group">
						<label for="country">Số điện thoại</label>
						<input type="text" class="form-control text-left px-3" placeholder="">
					</div>
					<div class="form-group">
						<label for="country">Đia chỉ</label>
						<input type="text" class="form-control text-left px-3" placeholder="">
					</div>
				</div>
			</div>
			<div class="col-lg-4 mt-5 cart-wrap ftco-animate">
				<div class="cart-total mb-3">
					<h3>Tổng tiền</h3>
					<p class="d-flex">
						<span>Tạm tính</span>
						<span>120.000 đ</span>
					</p>
					<p class="d-flex">
						<span>Phí Ship</span>
						<span>20.000 đ</span>
					</p>
					<hr>
					<p class="d-flex total-price">
						<span>Tổng</span>
						<span>140.000 đ</span>
					</p>
				</div>
					<p>
					
						<button style="color: white !important; 
										background-color: #dd781a !important; 
										border-radius: 2px !important; 
										font-size:20px; 
										width: 100%; 
										padding: 5px 0; 
										cursor: pointer;">Đặt hàng</button>
						
					</p>
			</div>
		</div>
	</form>
</section>

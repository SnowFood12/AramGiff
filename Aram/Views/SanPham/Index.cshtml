@model IEnumerable<Aram.Models.SanPham>

@{
    ViewData["Title"] = "Index";
}
<style>
    .Thoat{
        color: #ff7800;
    }
    .Thoat:hover{
        color: black !important;
    }
    .toggle {
        display: inline-block;
        height: 25px;
        position: relative;
        width: 60px;
    }

        .toggle input[type="checkbox"] {
            display: none;
        }

        .toggle .slider:before {
            background-color: #fff;
            bottom: 4px;
            content: "";
            height: 17px;
            left: 4px;
            position: absolute;
            transition: .4s;
            width: 26px;
            border-radius: 50px;
        }

        .toggle .slider {
            background-color: #ccc;
            cursor: pointer;
            width: 100%;
            height: 100%;
            transition: .4s;
            position: relative;
            border-radius: 50px;
        }

        .toggle input[type="checkbox"]:checked + .slider {
            background-color: #1C65A1 !important;
        }

            .toggle input[type="checkbox"]:checked + .slider:before {
                transform: translateX(26px);
            }
</style>
<link rel="stylesheet" href="/css/CuaHang/Create.css">
@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible" id="alert" role="alert" style="position:absolute; top: 7rem ; right: 0px; z-index: 9; display: none;">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="alert__thongbao1">

</div>
<div style="width: 90%;
            margin: 7rem auto;
            padding: 20px 0px;
            background: #fff;">
    <form asp-action="Search" asp-controller="SanPham">
        <div class="main__tieude">
            <p class="tieu__de">Danh sản phẩm của<br />"@ViewBag.chName.Ten" <a class="Thoat" asp-action="Index" asp-controller="CuaHang"><i class="fa-solid fa-right-from-bracket"></i></a></p>
            
            <div class="row justify-content-center" style="width:37%; ">
                <div class="col-md-10 text-center" style="margin-top: 20px">
                    <ul class="product-category">
                        <li><a asp-action="Index" asp-controller="SanPham" asp-route-id="@ViewBag.chID" class="active">Tất cả</a></li>
                        <li><a asp-action="ConHang" asp-controller="SanPham">Còn hàng</a></li>
                        <li><a asp-action="HetHang" asp-controller="SanPham">Hết hàng</a></li>
                    </ul>
                </div>
            </div>

            <div class="main__tim--kiem">
                <input type="text" placeholder="Tìm kiếm" class="ipt__tim--kiem" name="search"/>
                <button class="btn__tim--kiem"><i class="fa-solid fa-magnifying-glass"></i></button>
            </div>
        </div>
    </form>

    <table class="table">
        <thead style="background-color: #dad9d9; color: black;">
            <tr>
                <th>
                    STT
                </th>
                <th>
                    Tên sản phẩm
                </th>
                <th>
                    Đơn giá
                </th>
                <th>
                    Hình ảnh
                </th>
                <th>
                    Trạng thái
                </th>
                <th>
                    <a asp-action="Create" asp-controller="SanPham" asp-route-chID="@ViewBag.chID" class="btn" style=" border-radius: 2px; border:1px solid black; color: black;background-color:white;">Thêm sản phẩm</a>
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                int dem = 0 ;
                @foreach (var item in Model)
                {
                    dem++;
                    <tr style="color: black;">
                        <td>
                            @dem
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ten)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gia)
                        </td>
                        <td>
                            <img src="@Url.Action("GetImage", "SanPham", new { id = item.Id })" style="height:50px;">
                        </td>
                        <td>
                            <label class="toggle" for="@item.Id">
                                <input type="checkbox" id="@item.Id" name="TrangThai" class="check" data-id="@item.Id" >
                                <div class="slider" onclick="DoiTrangThai(@item.Id)"></div>
                            </label>
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" asp-route-chID="@item.CuaHangId"><i class="fa-solid fa-pen-to-square" style="color: #448c8d !important; font-size:20px; margin-left: 10px"></i></a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
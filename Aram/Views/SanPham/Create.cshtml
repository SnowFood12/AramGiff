<link rel="stylesheet" href="/css/CuaHang/Create.css">



<div class="row_aram">
    <div class="col-md-4">
        <span style="font-size: 20px;">Thêm thông tin sản phẩm</span>
        <form asp-action="Create" asp-route-cuahangid="@ViewBag.chID" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Tên sản phẩm</label>
                <input asp-for="Ten" class="form-control" />
                <span asp-validation-for="Ten" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Đơn giá (đơn vị 1.000đ)</label>
                <input asp-for="Gia" class="form-control" />
                <span asp-validation-for="Gia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoaiSPId" class="control-label">Loại sản phẩm</label>
                <select asp-for="LoaiSPId" class="form-control" asp-items="ViewBag.LoaiSP"></select>
            </div>
            <div class="form-group">
                <label asp-for="PicData" for="img" class="control-label" style="border: 1px solid; 
                                                                                cursor: pointer; 
                                                                                padding:5px 10px; 
                                                                                background: white ;">Thêm hình ảnh</label>

                <input asp-for="PicData" type="file" class="form-control" name="imageSP" id="img" style="display: none;" onchange="displayImage(this)" />
                <div class="form-control" style="height: 200px !important;">
                    <img src="#" id="myImage" style="width: 100%; height: 100%; object-fit: cover;" />
                </div>
                <span asp-validation-for="PicData" class="text-danger"></span>
            </div>

            <div class="form-group--btn">
                <input type="submit" value="Tạo" class="btn__them" />
                <div>
                    <a asp-action="Index" asp-route-id="@ViewBag.chID" type="button" class="btn__them">Quay lại</a>
                </div>
            </div>
        </form>
    </div>
</div>
<script>
    function displayImage(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                document.getElementById('myImage').src = e.target.result;
            };

            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
<div class="card mb-4 p-5">
    <h4 class="fw-bold py-3 mb-4"><a asp-action="Index" asp-controller="SanPham" asp-route-id="@ViewBag.chID" class="text-muted fw-light">Danh sách sản phẩm của "Cửa hàng lưu niệm Tây Nguyên" <i class="fa-solid fa-chevron-right" style="font-size:18px;"></i> </a>Thêm thông tin sản phẩm</h4>
    <form class="row g-3" asp-action="Create" asp-controller="SanPham" asp-route-cuahangid="@ViewBag.chID" enctype="multipart/form-data" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-6">
            <label for="validationServer03" class="form-label">Tên sản phẩm</label>
            <input asp-for="Ten" type="text" class="form-control">
            <span asp-validation-for="Ten" style="color: #da1616;"></span>
        </div>
        <div class="col-md-6">
            <label for="validationServer05" class="form-label">Đơn giá</label>
            <input asp-for="Gia" type="number" class="form-control">
            <span asp-validation-for="Gia" style="color: #da1616;"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="PicData" for="validationServer05" class="form-label">Thêm hình ảnh</label>
            <input asp-for="PicData" type="file" class="form-control" name="imageSP">
            <span asp-validation-for="Ten" style="color: #da1616;"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="LoaiSPId" class="form-label">Loại sản phẩm</label>
            <select asp-for="LoaiSPId" class="form-control" asp-items="ViewBag.LoaiSP"></select>
            <div style="color: #da1616;">
            </div>
        </div>
        <div class="col-md-6">
            <img id="myImage" src="#" class="form-control" style="height:10rem; object-fit:cover;">
        </div>
        <div class="col-12">
            <button class="btn btn-outline-warning" type="submit">Thêm thông tin sản phẩm</button>
        </div>
    </form>
</div>
<script>
    function displayImage(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                document.getElementById('myImage').src = e.target.result;
            };

            reader.readAsDataURL(input.files[0]);
        }
    }
</script>

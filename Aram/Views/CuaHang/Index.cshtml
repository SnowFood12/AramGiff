@model IEnumerable<Aram.Models.CuaHang>

@{
    ViewData["Title"] = "Index";
}

<div style="width: 90%; 
            margin: 7rem auto; 
            border: 1px solid black; 
            padding: 20px 0px;">
    <table class="table">
        <thead style="background-color: #be7a65; color:white">
            <tr>
                <th>
                    Tên cửa hàng
                </th>
                <th>
                    Số DT
                </th>
                <th>
                    Địa chỉ
                </th>
                <th>
                    <a asp-action="Create" class="btn" style=" border-radius: 2px; border:1px solid white; color: white;">Create New</a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoDT)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiaChi)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square" style="color: #be7a65 !important;"></i></a> |
                        <a asp-controller="SanPham" asp-action="Index" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info" style="color: #be7a65 !important;"></i></a> |
                        <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash" style="color: #be7a65 !important;"></i></a>
                    </td>v
                </tr>
            }
        </tbody>
    </table>
</div>

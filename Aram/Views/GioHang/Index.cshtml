@model Aram.Models.GioHang

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="hero-wrap hero-bread" style="background-image: url('/img/zyro-image\ \(11\).png');">
	<div class="container">
		<div class="row no-gutters slider-text align-items-center justify-content-center">
			<div class="col-md-9 ftco-animate text-center">
				<p class="breadcrumbs"><span>Dự án</span></p>
				<h1 class="mb-0 bread">Thành phố xanh</h1>
			</div>
		</div>
	</div>
</div>

<div class="row justify-content-center">
	<div class="col-md-10 text-center" style="margin-top: 30px">
		<ul class="product-category">
			<li><a asp-action="Index" asp-controller="Home" class="active">Giỏ hàng</a></li>
			<li><a asp-action="GioHangDangChoDuyet" asp-controller="GioHang">Đơn hàng đang chờ duyệt</a></li>
			<li><a asp-action="DonHangDangGiao" asp-controller="GioHang">Đơn hàng đang giao</a></li>
			<li><a asp-action="DonHangDaNhan" asp-controller="GioHang">Đơn hàng đã nhận</a></li>
		</ul>
	</div>
</div>

<section class="ftco-section ftco-cart" style="
    padding: 0px;
    margin: 20px 0px;">
	<div class="container">
		<div class="row">
			<div class="col-md-12 ftco-animate">
				<div class="cart-list">
					<table class="table" style="
							background: #fff;
							box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;">
						<thead class="thead-primary">
							<tr class="text-center" style="background-color: #1C65A1 !important; ">
								<th>&nbsp;</th>
								<th>Hình ảnh</th>
								<th>Tên</th>
								<th>Đơn giá</th>
								<th>Số lượng</th>
								<th>Tổng tiền</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model?.GioHang_ChiTiets)
							{
								<tr class="text-center">
									<td class="product-remove">
										<a style="border:none; cursor:pointer;" >
											<i class="fa-solid fa-xmark" style="color: brown; font-size:20px;"></i>
										</a>

									</td>
									<td class="image-prod">
										<img src="/SanPham/GetImage/@item.SanPhamId" class="img" style="background-image: url('/img/zyro-image (10).png');"/>
									</td>

									<td class="product-name">
										<h3>@item.SanPham.Ten</h3>
									</td>

									<td class="price">@item.SanPham.Gia?.ToString("C3")</td>

									<td class="quantity">
										<form action="">
                                            <div class="input-group mb-3">
                                                
												<input type="text" name="quantity"
													   class="quantity form-control input-number" value="@item.SoLuong" min="1"
													   max="100">
											</div>
										</form>
									</td>
									<td class="total">@((item.SanPham.Gia * item.SoLuong)?.ToString("C3"))</td><!-- END TR-->
								</tr>
							}

								
						
							
						</tbody>
					</table>
			</div>
		</div>
	</div>

	<form action="">
			<div class="row justify-content-end" style="background: #fff;
														border-radius: 5px;
														box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;">
			<div class="col-lg-4 mt-5 cart-wrap ftco-animate">
				<div class="cart-total mb-3">
					<h3>Ghi chú</h3>
					<p>Nhập ghi chú vào trường thông tin</p>
					<div class="form-group">
						<textarea type="text" class="form-control text-left px-3" placeholder="" style="height:13rem !important; padding: 10px 0px; resize: none;"></textarea>
					</div>
				</div>
			</div>
			<div class="col-lg-4 mt-5 cart-wrap ftco-animate">
				<div class="cart-total mb-3">
					<h3>Thông tin giao hàng</h3>
					<p>Nhập thông tin nhận hàng của bạn</p>
					<div class="form-group">
						<label for="">Họ tên</label>
						<input type="text" class="form-control text-left px-3" placeholder="">
					</div>
					<div class="form-group">
						<label for="country">Số điện thoại</label>
						<input type="text" class="form-control text-left px-3" placeholder="">
					</div>
					<div class="form-group">
						<label for="country">Đia chỉ</label>
						<input type="text" class="form-control text-left px-3" placeholder="">
					</div>
				</div>
			</div>
			<div class="col-lg-4 mt-5 cart-wrap ftco-animate">
				<div class="cart-total mb-3">
					<h3>Tổng tiền</h3>
					<p class="d-flex">
						<span>Tạm tính</span>
							<span>@(Model?.TamTinh().ToString("C3")) </span>
					</p>
					<p class="d-flex">
						<span>Phí Ship</span>
						<span>20.000 đ</span>
					</p>
					<hr>
					<p class="d-flex total-price">
						<span>Tổng</span>
							<span>
								@if (Model.TamTinh() != 0)
								{
									@((Model?.TamTinh() + 20)?.ToString("C3"))
													}
								else
								{
									@((Model?.TamTinh().ToString("C3")))
								}
								</span>
						</p>
				</div>
					<p>
					
						<button style="color: white !important; 
										background-color: #dd781a !important; 
										border-radius: 2px !important; 
										font-size:20px; 
										width: 100%; 
										padding: 5px 0; 
										cursor: pointer;">Đặt hàng</button>
						
					</p>
			</div>
		</div>
	</form>
</section>

@model List<DonHang_ChiTiet>
@{
    ViewData["Title"] = "ChiTietDonHangDaNhan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero-wrap hero-bread" style="background-image: url('/img/zyro-image\ \(11\).png');">
	<div class="container">
		<div class="row no-gutters slider-text align-items-center justify-content-center">
			<div class="col-md-9 ftco-animate text-center">
				<p class="breadcrumbs"><span>Dự án</span></p>
				<h1 class="mb-0 bread">Thành phố xanh</h1>
			</div>
		</div>
	</div>
</div>

<div class="row justify-content-center">
	<div class="col-md-10 text-center" style="margin-top: 30px">
		<ul class="product-category">
			<li><a asp-action="DH_ChoDuyet" asp-controller="GioHang">Đơn hàng đang chờ duyệt</a></li>
			<li><a asp-action="DH_DangGiao" asp-controller="GioHang" >Đơn hàng đang giao</a></li>
			<li><a asp-action="DH_DaNhan" asp-controller="GioHang" class="active">Đơn hàng đã nhận</a></li>
		</ul>
	</div>
</div>

<section class="ftco-section ftco-cart" style="
    padding: 0px;
    margin: 20px 0px;">
	<div class="container">
		<div class="row">
			<div class="col-md-12 ftco-animate">
				<div class="cart-list">
					<table class="table" style="
							background: #fff;
							box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;">
						<thead class="thead-primary">
							<tr class="text-center" style="background-color: #1C65A1 !important; ">
								<th>&nbsp;</th>
								<th>Hình ảnh</th>
								<th>Tên</th>
								<th>Đơn giá</th>
								<th>Số lượng</th>
								<th>Tổng tiền</th>
							</tr>
						</thead>

						@foreach (var item in Model)
						{
							<tbody>
								<tr class="text-center">
									<td class="product-remove">
									</td>
									<td class="image-prod">
										<img src="@Url.Action("GetImage", "SanPham", new { id = item.SanPham.Id})" class="img" style="background-image: url('/img/zyro-image (10).png');">
										</img>
									</td>

									<td class="product-name">
										<h3>@item.SanPham.Ten</h3>
									</td>

									<td class="price">@item.SanPham.Gia</td>

									<td class="quantity">
										@item.SoLuong
									</td>
									<td class="total"> @((item.SoLuong * item.SanPham.Gia)?.ToString("C3")) </td><!-- END TR-->
							</tbody>

						}

						
					</table>
				</div>
			</div>
		</div>

		<form action="">
			<div class="row justify-content-end" style="background: #fff;
														border-radius: 5px;
														box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;">
				<div class="col-lg-4 mt-5 cart-wrap ftco-animate">
					<div class="cart-total mb-3">
						<h3>Bình luận</h3>
						<div class="form-group">
							<textarea type="text" class="form-control text-left px-3" placeholder="" style="height:13rem !important; padding: 10px 0px; resize: none;" value="@ViewBag.TT_NH.GhiChu"></textarea>
						</div>
					</div>
				</div>
				<div class="col-lg-4 mt-5 cart-wrap ftco-animate">
					<div class="cart-total mb-3">
						<h3>Thông tin giao hàng</h3>
						<p>Trợ giúp liên hệ: 1234567890</p>
						<div class="form-group">
							<label for="">Họ tên</label>
							<input type="text" class="form-control text-left px-3" placeholder="" disabled value="@ViewBag.TT_NH.HoTen">
						</div>
						<div class="form-group">
							<label for="country">Số điện thoại</label>
							<input type="text" class="form-control text-left px-3" placeholder="" disabled value="@ViewBag.TT_NH.SoDT">
						</div>
						<div class="form-group">
							<label for="country">Đia chỉ</label>
							<input type="text" class="form-control text-left px-3" placeholder="" disabled value="@ViewBag.TT_NH.DiaChi">
						</div>
					</div>
				</div>
				<div class="col-lg-4 mt-5 cart-wrap ftco-animate">
					<div class="cart-total mb-3">
						<h3>Tổng tiền</h3>
						<p class="d-flex">
							<span>Tạm tính</span>
							<span>120.000 đ</span>
						</p>
						<p class="d-flex">
							<span>Phí Ship</span>
							<span>20.000 đ</span>
						</p>
						<hr>
						<p class="d-flex total-price">
							<span>Tổng</span>
							<span>140.000 đ</span>
						</p>
					</div>
					<p>

						<button style="color: white !important;
										background-color: #dd781a !important;
										border-radius: 2px !important;
										font-size:18px;
										width: 100%;
										padding: 5px 0;
										cursor: pointer;">
							Bình luận
						</button>

					</p>
				</div>
			</div>
		</form>
</section>


